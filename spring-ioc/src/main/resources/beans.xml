<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="spring" class="com.mpp.spring.helloworld.impl.SpringHelloWorld"/>
    <bean id="struts" class="com.mpp.spring.helloworld.impl.StrutsHelloWorld"/>

    <bean id="service" class="com.mpp.spring.helloworld.HelloWorldService">
        <property name="helloWorld" ref="spring"/>
    </bean>

</beans>